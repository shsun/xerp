<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.demo.bootstrap.dao.mapper.base.StaffMapper">

	<insert id="insert" parameterType="com.demo.bootstrap.dao.entity.StaffEty">
		insert into staff(
			id,name,age,birthday,email)
		values (
			#{id},#{name},#{age},#{birthday},#{email}
		)
	</insert>

	<select id="selectById" parameterType="int" resultType="com.demo.bootstrap.dao.entity.StaffEty">
		select * from staff where id=#{value}
	</select>

	<delete id="deleteById" parameterType="int">
		DELETE FROM staff WHERE id=#{value}
	</delete>

	<select id="selectByEntity" parameterType="com.demo.bootstrap.dao.entity.StaffEty" resultType="com.demo.bootstrap.dao.entity.StaffEty">
		SELECT * from staff
		WHERE 1=1 
		<if test="id != null "> AND id=#{id}</if>
		<if test="name != null  and name != ''"> AND name=#{name}</if>
		<if test="age != null "> AND age=#{age}</if>
		<if test="birthday != null "> AND birthday=#{birthday}</if>
		<if test="email != null  and email != ''"> AND email=#{email}</if>
		<if test="extLimit == null"> order by id desc</if>
		<if test="extLimit != null">
			<if test="extLimit.sort == null"> order by id desc</if>
			<if test="extLimit.sort != null"> order by ${extLimit.sort} ${extLimit.dir}</if>
			<if test="extLimit.limit != null"> limit ${extLimit.start}, ${extLimit.limit}</if>
		</if>
	</select>

	<update id="updateById" parameterType="com.demo.bootstrap.dao.entity.StaffEty">
		UPDATE staff SET
		<if test="id != null">id=#{id},</if>
		<if test="name != null">name=#{name},</if>
		<if test="age != null">age=#{age},</if>
		<if test="birthday != null">birthday=#{birthday},</if>
		<if test="email != null">email=#{email},</if>
		 id=#{id}
		WHERE
		 id=#{id}
	</update>

	<select id="selectByLimit" parameterType="com.demo.bootstrap.dao.entity.StaffEty" resultType="com.demo.bootstrap.dao.entity.StaffEty">
		SELECT * from staff
		WHERE 1=1 
		<if test="id != null "> AND id=#{id}</if>
		<if test="name != null  and name != ''"> AND name=#{name}</if>
		<if test="age != null "> AND age=#{age}</if>
		<if test="birthday != null "> AND birthday=#{birthday}</if>
		<if test="email != null  and email != ''"> AND email=#{email}</if>
		<if test="extLimit == null"> order by id desc</if>
		<if test="extLimit != null">
			<if test="extLimit.sort == null"> order by id desc</if>
			<if test="extLimit.sort != null"> order by ${extLimit.sort} ${extLimit.dir}</if>
			<if test="extLimit.limit != null"> limit ${extLimit.start}, ${extLimit.limit}</if>
		</if>
	</select>

	<select id="selectLimitCount" parameterType="com.demo.bootstrap.dao.entity.StaffEty" resultType="java.lang.Integer">
		SELECT count(1) from staff
		WHERE 1=1 
		<if test="id != null "> AND id=#{id}</if>
		<if test="name != null  and name != ''"> AND name=#{name}</if>
		<if test="age != null "> AND age=#{age}</if>
		<if test="birthday != null "> AND birthday=#{birthday}</if>
		<if test="email != null  and email != ''"> AND email=#{email}</if>
	</select>
</mapper>